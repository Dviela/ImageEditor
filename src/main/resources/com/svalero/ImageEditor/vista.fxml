<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.svalero.ImageEditor.Controlador">

    <!-- Menú de la parte superior -->
    <top>
        <MenuBar>
            <Menu text="Archivo">
                <MenuItem text="Cargar Imágenes" onAction="#cargarImagenes"/>
                <MenuItem text="Guardar Imágenes" onAction="#guardarImagenes"/>
                <SeparatorMenuItem/>
                <MenuItem text="Salir" onAction="#salir"/>
            </Menu>
            <Menu text="Edición">
                <MenuItem text="Aplicar Filtro" onAction="#aplicarFiltro"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Panel izquierdo con la lista de imágenes y botones -->
    <left>
        <VBox spacing="10">
            <children>
                <Label text="Imágenes:"/>
                <ListView fx:id="listaImagenes"/>
                <Button text="Cargar Imágenes" onAction="#cargarImagenes"/>
            </children>
        </VBox>
    </left>

    <!-- Panel central con las pestañas para las imágenes -->
    <center>
        <TabPane fx:id="tabPane"/>
    </center>

    <!-- Panel derecho con lista de filtros y el botón para aplicarlos -->
    <right>
        <VBox spacing="10">
            <children>
                <Label text="Filtros"/>
                <ComboBox fx:id="choiceFiltros">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="AumentoBrillo"/>
                            <String fx:value="EscalaGrises"/>
                            <String fx:value="InvertirColor"/>
                            <String fx:value="Sepia"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button text="Aplicar Filtro" onAction="#aplicarFiltro"/>
            </children>
        </VBox>
    </right>

    <!-- Panel inferior con el botón para Guardar imágenes y el de Ver Historial-->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Guardar Imágenes" onAction="#guardarImagenes"/>
            <Button text="Ver Historial" onAction="#verHistorial"/>
        </HBox>
    </bottom>

</BorderPane>