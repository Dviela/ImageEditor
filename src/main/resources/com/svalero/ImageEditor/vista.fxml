<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.svalero.ImageEditor.Controlador">
    <top>
        <HBox spacing="10" padding="10">
            <children>
                <Button text="Cargar Imágenes" onAction="#cargarImagenes" />
                <Button text="Aplicar Filtro" onAction="#aplicarFiltro" />
                <Button text="Guardar Imágenes" onAction="#guardarImagenes" />
                <ChoiceBox fx:id="choiceFiltros">
                    <items>
                        AumentoBrillo
                        EscalaGrises
                        InvertirColor
                        Sepia
                    </items>
                </ChoiceBox>
            </children>
        </HBox>
    </top>
    <center>
        <ListView fx:id="listaImagenes" />
    </center>
    <right>
        <ImageView fx:id="imageView" fitWidth="300" fitHeight="300" preserveRatio="true" />
    </right>
</BorderPane>


